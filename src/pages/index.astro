    <script>
      const swiper = new Swiper("#blog-swiper", {
        slidesPerView: 1, // default 1 card per slide
        spaceBetween: 20,
        loop: false,
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
        navigation: {
          nextEl: ".swiper-button-next",
          prevEl: ".swiper-button-prev",
